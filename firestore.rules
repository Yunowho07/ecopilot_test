rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Each user has a profile at /users/{userId}
      match /users/{userId} {
      // Allow the authenticated user to read & write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Scans (user-specific subcollection): /users/{userId}/scans/{scanId}
      match /scans/{scanId} {
      // Allow the authenticated user to create/read/update/delete only their own scans
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Optional stricter create rule example (uncomment if you want):
      allow create: if request.auth != null
            && request.auth.uid == userId
            && request.resource.data.keys().hasAll(['analysis','timestamp']);
            }
        }
      }

      // Optional public collection example
      match /public/{doc=**} {
        allow read: if true;
        allow write: if false;
      }

      // Default: deny anything else explicitly
      match /{document=**} {
        allow read, write: if false;
      }
    }
  }

